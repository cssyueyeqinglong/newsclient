<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/content_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/contetn_rb_home"
            style="@style/contenttab"
            android:drawableTop="@drawable/selector_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/content_rb_news"
            style="@style/contenttab"
            android:drawableTop="@drawable/selector_news"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/contetn_rb_service"
            style="@style/contenttab"
            android:drawableTop="@drawable/selector_service"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/content_rb_gova"
            style="@style/contenttab"
            android:drawableTop="@drawable/selector_gove"
            android:text="政务" />

        <RadioButton
            android:id="@+id/content_rb_service"
            style="@style/contenttab"
            android:drawableTop="@drawable/selector_setting"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>